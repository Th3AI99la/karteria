{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "ignore",
    "embeddedLanguageFormatting": "auto",
    "bracketSameLine": true,
    "overrides": [
        {
            "files": ["*.html"],
            "options": {
                "parser": "html",
                "tabWidth": 4,
                "printWidth": 180,
                "bracketSameLine": true,
                "htmlWhitespaceSensitivity": "ignore"
            }
        },
        {
            "files": ["*.css", "*.scss"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["*.js"],
            "options": {
                "tabWidth": 4,
                "singleQuote": true
            }
        }
    ]
}
